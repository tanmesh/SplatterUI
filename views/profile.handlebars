<div>
    <div class="a6">
        <h5>Welcome, {{user.user.firstName}}  {{user.user.lastName}}</h5>
        <div class="redbox">
            <h5>Posts</h5>
            <h4>{{user.userPostCount}}</h4>
        </div>
        <div class="bluebox">
            <h5>Following</h5>
            <h4>{{user.user.followingTagCount}}</h4>
        </div>
        <div class="greenbox">
            <h5>Followers</h5>
            <h4>0</h4>
        </div>
    </div>
    <div>
        <ul>
            {{#user.userPostList}}
                <div class="a4">
                    <li>
                        <img class="resize" src="{{image}}" alt="image"/>
                    </li>
                    <ul>
                        {{#tags}}
                            <li class="a1">
                                {{this}}
                            </li>
                        {{/tags}}
                    </ul>
                </div>
            {{/user.userPostList}}
        </ul>
    </div>
</div>